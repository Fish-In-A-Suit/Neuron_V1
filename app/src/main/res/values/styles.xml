<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.LoginActivity.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/background</item>
    </style>

    <style name="AGSU_loading_progress_bar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:minWidth">50dp</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="FacebookLoginButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/com_facebook_button_background</item>
        <item name="android:layout_gravity">clip_horizontal</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicator">@null</item>
        <item name="tabRippleColor">@color/background</item>
    </style>

</resources>
